<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Theme Color Resources -->

    <!-- Dark Theme Colors -->
    <Color x:Key="DarkBackgroundColor">#121212</Color>
    <Color x:Key="DarkSurfaceColor">#282929</Color>
    <Color x:Key="DarkSecondaryColor">#141414</Color>
    <Color x:Key="DarkTextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="DarkTextSecondaryColor">#8d8e8f</Color>
    <Color x:Key="DarkTextTertiaryColor">#abadae</Color>

    <!-- Light Theme Colors -->
    <Color x:Key="LightBackgroundColor">#F5F5F5</Color>
    <Color x:Key="LightSurfaceColor">#FFFFFF</Color>
    <Color x:Key="LightSecondaryColor">#E0E0E0</Color>
    <Color x:Key="LightTextPrimaryColor">#212121</Color>
    <Color x:Key="LightTextSecondaryColor">#757575</Color>
    <Color x:Key="LightTextTertiaryColor">#9E9E9E</Color>

    <!-- Vibrant Colors -->
    <Color x:Key="VibrantDarkBackgroundColor">#0D1117</Color>
    <Color x:Key="VibrantDarkSurfaceColor">#161B22</Color>
    <Color x:Key="VibrantDarkSecondaryColor">#21262D</Color>

    <Color x:Key="VibrantLightBackgroundColor">#F0F6FF</Color>
    <Color x:Key="VibrantLightSurfaceColor">#FFFFFF</Color>
    <Color x:Key="VibrantLightSecondaryColor">#E1F0FF</Color>

    <!-- Accent Colors -->
    <Color x:Key="AccentOrangeColor">#ffa500</Color>
    <Color x:Key="AccentGreenColor">#164734</Color>
    <Color x:Key="AccentBlueColor">#01abf3</Color>
    <Color x:Key="AccentPinkColor">#ff4582</Color>

    <!-- ProgressBar Colors -->
    <Color x:Key="ProgressBarTrackColor">#303030</Color>
    <Color x:Key="ProgressBarIndicatorColor">#0078D7</Color>

    <!-- SolidColorBrush Resources -->

    <!-- Dark Theme Brushes -->
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackgroundColor}" />
    <SolidColorBrush x:Key="DarkSurfaceBrush" Color="{StaticResource DarkSurfaceColor}" />
    <SolidColorBrush x:Key="DarkSecondaryBrush" Color="{StaticResource DarkSecondaryColor}" />
    <SolidColorBrush x:Key="DarkTextPrimaryBrush" Color="{StaticResource DarkTextPrimaryColor}" />
    <SolidColorBrush x:Key="DarkTextSecondaryBrush" Color="{StaticResource DarkTextSecondaryColor}" />
    <SolidColorBrush x:Key="DarkTextTertiaryBrush" Color="{StaticResource DarkTextTertiaryColor}" />

    <!-- Light Theme Brushes -->
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackgroundColor}" />
    <SolidColorBrush x:Key="LightSurfaceBrush" Color="{StaticResource LightSurfaceColor}" />
    <SolidColorBrush x:Key="LightSecondaryBrush" Color="{StaticResource LightSecondaryColor}" />
    <SolidColorBrush x:Key="LightTextPrimaryBrush" Color="{StaticResource LightTextPrimaryColor}" />
    <SolidColorBrush x:Key="LightTextSecondaryBrush" Color="{StaticResource LightTextSecondaryColor}" />
    <SolidColorBrush x:Key="LightTextTertiaryBrush" Color="{StaticResource LightTextTertiaryColor}" />

    <!-- Vibrant Theme Brushes -->
    <SolidColorBrush x:Key="VibrantDarkBackgroundBrush" Color="{StaticResource VibrantDarkBackgroundColor}" />
    <SolidColorBrush x:Key="VibrantDarkSurfaceBrush" Color="{StaticResource VibrantDarkSurfaceColor}" />
    <SolidColorBrush x:Key="VibrantDarkSecondaryBrush" Color="{StaticResource VibrantDarkSecondaryColor}" />

    <SolidColorBrush x:Key="VibrantLightBackgroundBrush" Color="{StaticResource VibrantLightBackgroundColor}" />
    <SolidColorBrush x:Key="VibrantLightSurfaceBrush" Color="{StaticResource VibrantLightSurfaceColor}" />
    <SolidColorBrush x:Key="VibrantLightSecondaryBrush" Color="{StaticResource VibrantLightSecondaryColor}" />

    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="AccentOrangeBrush" Color="{StaticResource AccentOrangeColor}" />
    <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreenColor}" />
    <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlueColor}" />
    <SolidColorBrush x:Key="AccentPinkBrush" Color="{StaticResource AccentPinkColor}" />

    <!-- ProgressBar Brushes -->
    <SolidColorBrush x:Key="ProgressBarTrackBrush" Color="{StaticResource ProgressBarTrackColor}" />
    <SolidColorBrush x:Key="ProgressBarIndicatorBrush" Color="{StaticResource ProgressBarIndicatorColor}" />

    <!-- Theme-Adaptive Brushes -->
    <!-- These brushes automatically adapt to the current theme using app theme resources -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource DarkBackgroundColor}" />
    <SolidColorBrush x:Key="AppSurfaceBrush" Color="{StaticResource DarkSurfaceColor}" />
    <SolidColorBrush x:Key="AppSecondaryBrush" Color="{StaticResource DarkSecondaryColor}" />
    <SolidColorBrush x:Key="AppTextPrimaryBrush" Color="{StaticResource DarkTextPrimaryColor}" />
    <SolidColorBrush x:Key="AppTextSecondaryBrush" Color="{StaticResource DarkTextSecondaryColor}" />
    <SolidColorBrush x:Key="AppTextTertiaryBrush" Color="{StaticResource DarkTextTertiaryColor}" />

    <!-- Vibrant Theme-Adaptive Brushes -->
    <SolidColorBrush x:Key="VibrantBackgroundBrush" Color="{StaticResource VibrantDarkBackgroundColor}" />
    <SolidColorBrush x:Key="VibrantSurfaceBrush" Color="{StaticResource VibrantDarkSurfaceColor}" />
    <SolidColorBrush x:Key="VibrantSecondaryBrush" Color="{StaticResource VibrantDarkSecondaryColor}" />

    <!-- Text Styles -->
    <Style x:Key="AppHeaderStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource AppTextPrimaryBrush}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style x:Key="AppSubHeaderStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource AppTextPrimaryBrush}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Normal" />
    </Style>

    <Style x:Key="AppBodyStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource AppTextPrimaryBrush}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="AppCaptionStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource AppTextSecondaryBrush}" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!-- Layout Constants -->
    <Thickness x:Key="StandardMargin">10</Thickness>
    <Thickness x:Key="StandardPadding">10</Thickness>
    <x:Double x:Key="StandardCornerRadius">5</x:Double>
    <x:Double x:Key="RoundCornerRadius">20</x:Double>
</ResourceDictionary>