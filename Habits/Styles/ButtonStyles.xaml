<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Header Button Styles -->
    <Style x:Key="HeaderButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{ThemeResource SurfaceVariantColor}" />
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantColor}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Height" Value="40" />
        <Setter Property="Width" Value="40" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style x:Key="RoundButtonStyle" TargetType="Button" BasedOn="{StaticResource HeaderButtonStyle}">
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="Height" Value="40" />
        <Setter Property="Width" Value="40" />
    </Style>

    <Style x:Key="PillButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{ThemeResource SurfaceVariantColor}" />
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantColor}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Height" Value="40" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="Padding" Value="15,0" />
    </Style>

    <Style x:Key="ActionButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{ThemeResource SurfaceVariantColor}" />
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantColor}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Height" Value="40" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Padding" Value="15,0" />
    </Style>

    <!-- FontIcon Styles -->
    <Style x:Key="HeaderIconStyle" TargetType="FontIcon">
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantColor}" />
    </Style>

    <Style x:Key="LargeIconStyle" TargetType="FontIcon" BasedOn="{StaticResource HeaderIconStyle}">
        <Setter Property="FontSize" Value="24" />
    </Style>

    <Style x:Key="SmallIconStyle" TargetType="FontIcon" BasedOn="{StaticResource HeaderIconStyle}">
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!-- Light Theme Button Styles -->
    <Style x:Key="LightHeaderButtonStyle" TargetType="Button" BasedOn="{StaticResource HeaderButtonStyle}">
        <Setter Property="Background" Value="{ThemeResource SurfaceVariantColor}" />
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantColor}" />
    </Style>

    <Style x:Key="LightIconStyle" TargetType="FontIcon" BasedOn="{StaticResource HeaderIconStyle}">
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantColor}" />
    </Style>

    <!-- Common Buttons -->
    <Style x:Key="AddButtonStyle" TargetType="Button" BasedOn="{StaticResource HeaderButtonStyle}">
        <Setter Property="Content">
            <Setter.Value>
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE710;" Foreground="{ThemeResource OnSurfaceVariantColor}" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="OrderButtonStyle" TargetType="Button" BasedOn="{StaticResource HeaderButtonStyle}">
        <Setter Property="Content">
            <Setter.Value>
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8A1;" Foreground="{ThemeResource OnSurfaceVariantColor}" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SettingsButtonStyle" TargetType="Button" BasedOn="{StaticResource HeaderButtonStyle}">
        <Setter Property="Content">
            <Setter.Value>
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE713;" Foreground="{ThemeResource OnSurfaceVariantColor}" />
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- AccentButtonStyle to match what we used before -->
    <Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource HeaderButtonStyle}">
    </Style>
</ResourceDictionary>