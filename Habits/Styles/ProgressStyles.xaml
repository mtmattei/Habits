<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Templates for Progress Indicators -->

    <!-- ProgressBar Style with Custom Template -->
    <Style x:Key="CustomProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Foreground" Value="{ThemeResource PrimaryColor}" />
        <Setter Property="Background" Value="{ThemeResource OutlineVariantColor}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Height" Value="8" />
    </Style>

    <!-- ProgressRing Style -->
    <Style x:Key="CustomProgressRingStyle" TargetType="ProgressRing">
        <Setter Property="Height" Value="50" />
        <Setter Property="Width" Value="50" />
        <Setter Property="IsActive" Value="True" />
        <Setter Property="Foreground" Value="{ThemeResource PrimaryColor}" />
    </Style>
</ResourceDictionary>